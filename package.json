{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Cross-platform desktop app using Electron and React",
  "author": "Sanam Shrestha",
  "main": "src/electron/main.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist:mac": "npm run build && electron-builder --mac --arm64",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:linux": "npm run build && electron-builder --linux --x64"
  },
  "dependencies": {
    "bootstrap": "^5.3.7",
    "motion": "^12.23.12",
    "node-nmap": "^4.0.0",
    "os-utils": "^0.0.14",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@vitejs/plugin-react": "^4.5.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "npm-run-all": "^4.1.5",
    "vite": "^7.0.0"
  },
  "build": {
    "appId": "com.sanam.myapp",
    "productName": "MyElectronApp",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "src/electron/**/*",
      "dist-react/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [],
    "asar": true,
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
